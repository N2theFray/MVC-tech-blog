
{{#if posts.length}}
    {{#each posts as |post|}}

    <div class="card w-100 p-3" >
        <div class="card-body border border-dark" onclick="location.href='/dashboard/edit/{{id}}'" style="margin-top: 2em; cursor:pointer">
          <h5 class="card-title d-flex justify-content-between text-dark" style="background-color: aquamarine ;padding: 4px">{{title}}<span style="font-weight: 100; font-size: small;padding: 4px">Posted by {{user.username}} on {{format_date created_at}}</span></h5>
        </div>
    </div>

    {{/each}}
{{/if}}




<div class="card-body d-flex justify-content-around"style="padding-bottom: 1px;">
    <a href="/dashboard/create" class="btn btn-dark w-25">Create New Post</a>
</div>